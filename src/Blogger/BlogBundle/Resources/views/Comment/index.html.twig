{# src/Blogger/BlogBundle/Resources/views/Comment/index.html.twig #}

{% if comments is defined %}
{% for comment in comments %}
    <article class="comment {{ cycle(['odd', 'even'], loop.index0) }}" id="comment-{{ comment.id }}">
        {% if comment.image is defined %}
            <img src="{{ asset(['images'],  comment.image) }}">
            {% else %}
                <img src="{{ asset('images/default_user_picture.png') }}">
                {% endif %}
        <header>
            <p><span class="highlight">{{ comment.user }}</span> commented <time datetime="{{ comment.created|date('c') }}">{{ comment.created|created_ago }}</time></p>
        </header>
        <p>{{ comment.comments }}</p>
    </article>
{% endfor %}
{% else %}
    <p>There are no comments for this post. Be the first to comment...</p>
    {% endif %}